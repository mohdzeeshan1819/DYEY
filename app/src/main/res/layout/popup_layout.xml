<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_10sdp"
        android:backgroundTint="#EAE4E4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical"
        >



    <LinearLayout
        android:id="@+id/restaurantDetails"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_33sdp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/card_bg"
        android:layout_marginTop="@dimen/_15sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        >

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_weight="0.5"
            android:src="@drawable/ic_restaurant_details"
            />

        <TextView
            android:id="@+id/edittext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Restaurant Details"
            android:paddingLeft="@dimen/_10sdp"
            android:inputType="textCapWords"
            android:gravity="center_vertical"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"
            />
        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/arrowback"
            android:layout_weight="0.5"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/editDetails"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_33sdp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/card_bg"
        android:layout_marginTop="@dimen/_15sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        >

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="0.5"
            android:src="@drawable/ic_edit"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Edit Offer"
            android:inputType="textCapWords"
            android:gravity="center_vertical"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"
            />
        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/arrowback"
            android:layout_weight="0.5"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_33sdp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/card_bg"
        android:layout_marginTop="@dimen/_15sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        >

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="0.5"
            android:src="@drawable/ic_delete"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Delete Offer"
            android:inputType="textCapWords"
            android:gravity="center_vertical"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"
            />
        <ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/arrowback"
            android:layout_weight="0.5"
            />
    </LinearLayout>

            <TextView
                android:id="@+id/done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_60sdp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/unselected_btn"
                android:gravity="center_horizontal"
                android:paddingVertical="@dimen/_5sdp"
                android:text="Done"
                android:elevation="@dimen/_10sdp"
                android:textColor="#03A9F4"
                android:textSize="@dimen/_20sdp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>