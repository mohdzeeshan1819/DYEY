<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:background="#EAE4E4"
        tools:context=".homeFolder.ProfileFragment.SettingActiviy.ContactSupport.ContactSupport">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingBottom="@dimen/_5sdp"
            android:gravity="center">

            <TextView
                android:id="@+id/back"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textSize="@dimen/_10sdp"
                android:maxLines="1"
                android:layout_weight="1"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/unselected_btn"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:gravity="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Support"
                android:layout_weight="1"
                android:textSize="@dimen/_18sdp"
                android:maxLines="1"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:gravity="center" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Topic"
            android:textStyle="bold"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_50sdp"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_33sdp"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/edittext_style"
            android:paddingLeft="@dimen/_15sdp">

            <EditText
                android:id="@+id/topic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Select a Topic"
                android:inputType="textCapWords"
                android:background="@drawable/edittext_style"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:layout_weight="1"
                android:gravity="center_vertical"

                />
            <ImageView
                android:id="@+id/dropdownHeight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_dropdown"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_10sdp"
                />


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:textStyle="bold"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/edittext_style"
            android:paddingLeft="@dimen/_15sdp">

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Please enter a description of your issue"
                android:inputType="textCapWords"
                android:background="@drawable/edittext_style"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:layout_weight="1"
                android:gravity="start"
                android:padding="@dimen/_10sdp"

                />
<!--            <ImageView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_gravity="center_vertical"-->
<!--                android:src="@drawable/ic_dropdown"-->
<!--                android:layout_weight="1"-->
<!--                android:layout_marginEnd="@dimen/_10sdp"-->
<!--                />-->


        </LinearLayout>
        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text="Save"
            android:textSize="@dimen/_13sdp"
            android:textAllCaps="true"
            android:background="@drawable/ic_dark_blue_bg"
            android:maxLines="1"
            android:layout_marginHorizontal="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingTop="@dimen/_9sdp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:gravity="center" />


    </LinearLayout>
</layout>