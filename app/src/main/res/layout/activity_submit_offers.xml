<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:background="#EAE4E4"
        tools:context=".homeFolder.OfferFragment.CreateOffer.OfferEndActivty.SubmitOffers">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="back"
                android:textColor="@color/black"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:background="@drawable/unselected_btn"
                />
            <TextView
                android:id="@+id/resturantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit offers"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_20sdp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/_20sdp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:background="@drawable/card_bg"
            android:paddingHorizontal="@dimen/_30sdp"
            android:src="@drawable/submit_offer"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:paddingHorizontal="@dimen/_30sdp"
            android:src="@drawable/ic_logo2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Youâ€™re Almost Done!"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/_20sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginVertical="@dimen/_10sdp"
            android:orientation="horizontal"
            android:background="@drawable/card_bg"
            android:paddingHorizontal="@dimen/_5sdp">

            <LinearLayout
                android:id="@+id/layout"
                android:padding="@dimen/_3sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:backgroundTint="@color/white"
                    android:background="@color/white"
                    >
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_default"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xeeshan"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Android developer"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textColor="#403E3E"/>
                    <TextView
                        android:id="@+id/cuisine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="location"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textColor="#03A9F4"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg"
            android:padding="@dimen/_5sdp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/calender"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/ic_calender"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/_5sdp"
                android:layout_gravity="center_vertical"/>


            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="location"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toRightOf="@+id/calender"
                android:textSize="@dimen/_13sdp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_7sdp"
                android:src="@drawable/ic_arrow_down"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg"
            android:padding="@dimen/_5sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/attire"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_thinking"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/_4sdp"
                android:layout_gravity="center_vertical"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Attire"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/attire"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_7sdp"
                android:src="@drawable/ic_arrow_down"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg"
            android:padding="@dimen/_5sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/intension"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_thinking"
                android:paddingStart="@dimen/_4sdp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Intention"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toRightOf="@+id/intension"
                android:textSize="@dimen/_13sdp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_7sdp"
                android:src="@drawable/ic_arrow_down"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"/>


        </RelativeLayout>


        <TextView
            android:id="@+id/select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Create Offer"
            android:textAllCaps="true"
            android:paddingVertical="@dimen/_5sdp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/selected_btn"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />




    </LinearLayout>
</ScrollView>
    </layout>