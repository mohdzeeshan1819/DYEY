<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".homeFolder.OfferFragment.CreateOffer.CreateOffer"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="back"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:background="@drawable/unselected_btn"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create offers"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_20sdp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/_20sdp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_40sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Meal Type"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:background="@color/white"
                android:layout_marginTop="@dimen/_10sdp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/brunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_20sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="vertical">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_diet"/>

                    <TextView
                        android:id="@+id/brunchtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="center_horizontal"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Brunch" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/lunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_15sdp"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardElevation="@dimen/_20sdp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_70sdp"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_create_offers"/>

                        <TextView
                            android:id="@+id/lunchtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Lunch" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/dinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_15sdp"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardElevation="@dimen/_20sdp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_70sdp"
                            android:padding="@dimen/_8sdp"
                            android:src="@drawable/ic_create"/>

                        <TextView
                            android:id="@+id/dinnertext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Dinner" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>






            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_40sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Spending Amount"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:background="@color/white"
                android:layout_marginTop="@dimen/_10sdp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/good"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_20sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:src="@drawable/ic_create_offer"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:weightSum="2"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:padding="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_dollar"/>
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:padding="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:src="@drawable/twenty"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/goodtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Good" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/great"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_15sdp"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardElevation="@dimen/_20sdp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:src="@drawable/ic_create_offer"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:weightSum="2"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:padding="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_dollar"/>
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:padding="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:src="@drawable/fifty"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/greattext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Great" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/amazing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_15sdp"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardElevation="@dimen/_20sdp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:src="@drawable/ic_create_offer"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:weightSum="2"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:padding="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_dollar"/>
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:padding="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:src="@drawable/hundred"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/amazingtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="Amazing" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>






            </LinearLayout>

            <TextView
                android:id="@+id/SignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Done"
                android:textStyle="bold"
                android:layout_marginHorizontal="@dimen/_80sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:gravity="center"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingTop="@dimen/_9sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@drawable/selected_btn"/>


        </LinearLayout>




    </LinearLayout>
</layout>