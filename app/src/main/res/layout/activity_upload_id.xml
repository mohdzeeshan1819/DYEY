<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_20sdp"
        android:background="#EAE4E4"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingBottom="@dimen/_5sdp"
        android:gravity="center">

        <TextView
            android:id="@+id/back"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="@dimen/_10sdp"
            android:maxLines="1"
            android:layout_weight="1"
            android:padding="@dimen/_3sdp"
            android:background="@drawable/unselected_btn"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Government ID"
            android:layout_weight="1"
            android:textSize="@dimen/_18sdp"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:gravity="center" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Become a Verified User"
                android:layout_weight="1"
                android:textSize="@dimen/_13sdp"
                android:maxLines="1"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:gravity="start" />

            <TextView
                android:id="@+id/skip"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:textSize="@dimen/_10sdp"
                android:maxLines="1"
                android:layout_weight="1"
                android:padding="@dimen/_3sdp"
                android:background="@drawable/unselected_btn"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Become a Verified User"
                android:layout_weight="1"
                android:textSize="@dimen/_13sdp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Please provide a portrait/image Driver’s License Government ID, so that when others view their profile they can clearly see that they are a “verified” user)"
                android:textSize="@dimen/_10sdp"
                android:layout_weight="1"
                android:padding="@dimen/_3sdp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:gravity="center" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center"
            android:weightSum="2"
            android:orientation="horizontal"
            android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/doted_corner"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical"
            android:gravity="center">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_add_pic"
            android:layout_margin="@dimen/_10sdp"
            android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Front ID"
                android:textSize="@dimen/_13sdp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:gravity="center" />


    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:background="@drawable/doted_corner"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/ic_add_pic"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_gravity="center" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Front ID"
                    android:textSize="@dimen/_13sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:textSize="@dimen/_11sdp"
            android:textAllCaps="true"
            android:background="@drawable/selected_btn"
            android:maxLines="1"
            android:layout_marginHorizontal="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:textColor="@color/black"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingTop="@dimen/_9sdp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>
    </ScrollView>
    </LinearLayout>
</layout>