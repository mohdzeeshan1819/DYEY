<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:background="@color/white"
        android:paddingBottom="@dimen/_20sdp"
        tools:context=".loginFolder.IntroductionActivity">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>




        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:layout_editor_absoluteX="0dp">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_450sdp"
                android:layout_gravity="start"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_intro"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Did You Eat Yet"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:text="Welcome to DYEY the only social platform in\n the word that allows users to prove that \nCHIVALRY is indeed alive and well! happy trails\n&amp; Born Appetit!"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/previouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Previuse"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/unselected_btn"
                android:textColor="#42A0EC"
                android:textSize="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_30sdp"
 />
            <TextView
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Next"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/selected_btn"
                android:textColor="@color/white"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:textSize="@dimen/_15sdp"


                />
        </LinearLayout>


    </LinearLayout>
    </ScrollView>

</layout>